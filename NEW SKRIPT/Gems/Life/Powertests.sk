on damage:
	if attacker's held item is a prismarine shard named "&d&lLife &lgem":
		if {life.cooldown3.%attacker%} is not true:
			if {Tag..%attacker%} is 0:
				if {Bliss.Life.%attacker%} > 4:
					set {LifeSec3.%attacker%} to 30
					set {LifeMin3.%attacker%} to 2
					set {life.cooldown3.%attacker%} to true
				if {Bliss.Life.%attacker%} is 3:
					set {LifeSec3.%attacker%} to 1
					set {LifeMin3.%attacker%} to 3
					set {life.cooldown3.%attacker%} to true
				if {Bliss.Life.%attacker%} < 3:
					set {LifeSec3.%attacker%} to 35
					set {LifeMin3.%attacker%} to 3
					set {life.cooldown3.%attacker%} to true
				set {HP..%victim%} to a random integer between 1 and 4
				if {HP..%victim%} is 1:
					send "&dDecreased %victim%'s hp by 5%%" to attacker
					send "&c%attacker% decreased &dyour hp by 5%%" to victim
				if {HP..%victim%} is 2:
					send "&dDecreased %victim%'s hp by 10%%" to attacker
					send "&c%attacker% decreased &dyour hp by 10%%" to victim
				if {HP..%victim%} is 3:
					send "&dDecreased %victim%'s hp by 15%%" to attacker
					send "&c%attacker% decreased &dyour hp by 15%%" to victim
				if {HP..%victim%} is 4:
					send "&dDecreased %victim%'s hp by 20%%" to attacker
					send "&c%attacker% decreased &dyour hp by 20%%" to victim
					remove 2 from victim's max health
				wait 40 seconds
				set victim's max health to 10

on left click:
	if player's held item is a prismarine shard named "&d&lLife &lgem":
		set {_uuid} to uuid of player
		if {Life.Power1.CircleOfLfe.Cooldown.%{_uuid}%} is false:
			set {_Lifeholder} to player
			execute player command "/lifecircle 1"
			execute player command "/lifecircle 2"
			execute player command "/lifecircle 3"
			execute player command "/lifecircle 4"
			execute player command "/lifecircle 5"
			execute player command "/lifecircle 6"
			execute player command "/lifecircle 7"
			execute player command "/lifecircle 8"
			loop all players within 8 blocks of the player:
				if loop-player is not {_Lifeholder}:
				
					if name of loop-player contains "%{Trusted.%{_Lifeholder}%.1}%":
						add 4 to loop-player's max health
					else:
						remove 4 from loop-player's max health

					if name of loop-player contains "%{Trusted.%{_Lifeholder}%.2}%":
						add 4 to loop-player's max health
					else:
						remove 4 from loop-player's max health

					if name of loop-player contains "%{Trusted.%{_Lifeholder}%.3}%":
						add 4 to loop-player's max health
					else:
						remove 4 from loop-player's max health

					if {Bliss.Life.%{_Lifeholder}%} > 4:
						set {Life.Power1.CircleOfLfe.Second.%{_uuid}%} to 30
						set {Life.Power1.CircleOfLfe.Minute.%{_uuid}%} to 2
						set {Life.Power1.CircleOfLfe.Cooldown.%{_uuid}%} to true
					if {Bliss.Life.%{_Lifeholder}%} is 3:
						set {Life.Power1.CircleOfLfe.Second.%{_uuid}%} to 1
						set {Life.Power1.CircleOfLfe.Minute.%{_uuid}%} to 3
						set {Life.Power1.CircleOfLfe.Cooldown.%{_uuid}%} to true
					if {Bliss.Life.%{_Lifeholder}%} < 3:
						set {Life.Power1.CircleOfLfe.Second.%{_uuid}%} to 35
						set {Life.Power1.CircleOfLfe.Minute.%{_uuid}%} to 3

					set {Life.Power1.CircleOfLfe.Cooldown.%{_uuid}%} to true
					wait 10 seconds
					set loop-player's max health to 10
					set {_Lifeholder}'s max health to 10

