on sneak toggle:
	set {_uuid} to uuid of player
	if {Tag..%player%} is 0:
		if player's off hand item is prismarine shard named "&6&lFire &lgem":
			if {Fire.Power2.Enchanting.Cooldown.%{_uuid}%} is not true:
				if player's held item is a any sword:
					execute console command "enchant %player% fire_aspect 2"
					send "&aEnchanting Tool with &eFire aspect &42"
					set {Fire.Power2.Enchanting.Minute.%{_uuid}%} to 14
					set {Fire.Power2.Enchanting.Second.%{_uuid}%}  to 59
					set {Fire.Power2.Enchanting.Cooldown.%{_uuid}%} to true
		
		if player's off hand item is amethyst shard named "&6&lFire &lgem":
			if {Tier2.Stregnth.%player%} is not true:
				if {Fire.Power2.Enchanting.Cooldown.%{_uuid}%} is not true:
					if player's held item is a any sword:
						execute console command "enchant %player% fire_aspect 1"
						send "&aEnchanting Tool with &eFire aspect &41"
						set {Fire.Power2.Enchanting.Minute.%{_uuid}%} to 14
						set {Fire.Power2.Enchanting.Second.%{_uuid}%}  to 59
						set {Fire.Power2.Enchanting.Cooldown.%{_uuid}%} to true



