every 0.1 tick:
	loop all players:
		if {Fireball.%loop-player%} > 0:
			execute console command "execute as %loop-player% at @s run execute as @e[type=armor_stand,tag=5%loop-player%] run tp ~ ~1 ~"
			execute console command "execute as %loop-player% at @s run particle dust 1 0.42 0 1.4 ~ ~.2 ~ 0.2 0.2 0.2 0 5 force @a"

on right click:
	if player's held item is a prismarine shard named "&6&lFire &lgem":
		if clicked block is not air:
			if block above clicked block is air:
				set {_uuid} to uuid of player
				if {Fire.Power3.Campfire.Cooldown.%{_uuid}%} is false:
					set {Fire.Power3.Campfire.Second.%{_uuid}%} to 59
					set {Fire.Power3.Campfire.Minute.%{_uuid}%} to 1
					set {Fire.Power3.Campfire.Cooldown.%{_uuid}%} to true
					set block above clicked block to soul campfire
					send "&9Cozy campfire"
					execute console command "tag add %player% TrustedBy%player%"
					wait 15 seconds
					set block above clicked block to air

